<p style="color: green"><%= notice %></p>

<h1>Groups</h1>

<div id="groups">
  <table class="table table-hover">
    <thead>
      <th>Group Name</th>
      <th>Group Description</th>
      <th>Group Members</th>
      <th>Action</th>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <%= render group %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New group", new_group_path %>
